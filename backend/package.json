{
    "name": "@bookkey/backend",
    "private": true,
    "version": "0.0.0",
    "description": "a backend to this app",
    "types": "tsc --noEmit --project ./tsconfig.json",
    "scripts": {
        "dev": "cross-env NODE_ENV=development ts-node-dev --watch ./src/emails/dist,./.env --rs --exit-child ./src/index.ts",
        "test": "jest --runInBand",
        "build-emails": "rimraf ./src/emails/dist && mkdir ./src/emails/dist && mjml ./src/emails/[!_]*.mjml -o ./src/emails/dist",
        "copy-emails": "copyfiles ./src/emails/dist/*.html ./dist/backend",
        "watch-emails": "mjml -w .src/emails/[!_]*.mjml -o ./src/emails/dist",
        "build-ts": "rimraf ./dist && tsc --build ./tsconfig.build.json",
        "build": "pnpm build-ts && pnpm build-emails && pnpm copy-emails",
        "sentry-release": "dotenv -- bash -c 'sentry-cli releases new ${SOURCE_VERSION} --finalize --org bookkey-0ca --project bookkey-backend --auth-token ${SENTRY_AUTH_TOKEN}'",
        "sentry-sourcemaps": "dotenv -- bash -c 'sentry-cli releases files ${SOURCE_VERSION} upload-sourcemaps ./dist --org bookkey-0ca --project bookkey-backend'",
        "sentry": "pnpm sentry-release && pnpm sentry-sourcemaps",
        "start": "cross-env NODE_ENV=production node ./dist/backend/src/index.js",
        "pmd": "prisma migrate dev",
        "pmt": "dotenv -e ./.env.test prisma migrate deploy",
        "pgc": "prisma generate",
        "prepare": "pnpm pgc && ts-patch install -s"
    },
    "prisma": {
        "schema": "./src/prisma/schema.prisma"
    },
    "devDependencies": {
        "@sentry/cli": "^2.43.1",
        "@types/cors": "^2.8.17",
        "@types/debug": "^4.1.12",
        "@types/express": "^5.0.0",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/node": "^22.13.9",
        "@types/passport": "^1.0.17",
        "@types/passport-jwt": "^4.0.1",
        "@types/triple-beam": "^1.3.5",
        "dotenv-cli": "^8.0.0",
        "prisma": "^6.5.0"
    },
    "dependencies": {
        "@bookkey/shared": "workspace:*",
        "@bookkey/webapp": "workspace:*",
        "@prisma/client": "^6.5.0",
        "@sentry/integrations": "^7.114.0",
        "@sentry/node": "^9.15.0",
        "@trpc/server": "^10.45.2",
        "@types/lodash": "^4.17.16",
        "axios": "^1.8.4",
        "cors": "^2.8.5",
        "cron": "^4.3.0",
        "debug": "^4.4.0",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "fast-glob": "^3.3.3",
        "handlebars": "^4.7.8",
        "jsonwebtoken": "^9.0.2",
        "lodash": "^4.17.21",
        "mjml": "^4.15.3",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "picocolors": "^1.1.1",
        "react-router-dom": "^7.3.0",
        "serialize-error": "8.1.0",
        "superjson": "^2.2.2",
        "triple-beam": "^1.4.1",
        "trpc-playground": "^1.0.4",
        "winston": "^3.17.0",
        "yaml": "^2.7.1",
        "zod": "^3.24.2"
    }
}
